<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="asha.dshm.asha2.FillChoice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_background"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1.5"
                android:src="@drawable/icons8_registration_64"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/regNew"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="40dp"
                android:fontFamily="@font/kadwa"
                android:textColor="@color/red_text"
                android:textAlignment="gravity"
                android:gravity="left"
                android:text="@string/newEntry"
                android:layout_gravity="center"
                android:textSize="21dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_background"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1.5"
                android:src="@drawable/icons8_update_64"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/updateOld"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="40dp"
                android:fontFamily="@font/kadwa"
                android:textColor="@color/red_text"
                android:textAlignment="gravity"
                android:gravity="left"
                android:text="@string/update"
                android:layout_gravity="center"
                android:textSize="21dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_background"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1.5"
                android:src="@drawable/icons8_renew_64"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/reSurvey"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="40dp"
                android:fontFamily="@font/kadwa"
                android:textColor="@color/red_text"
                android:textAlignment="gravity"
                android:gravity="left"
                android:text="@string/reSurvey"
                android:layout_gravity="center"
                android:textSize="21dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_background"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1.5"
                android:id="@+id/thumbnail"
                android:src="@drawable/icons8_statistics_64"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/rntcpShow"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="40dp"
                android:fontFamily="@font/kadwa"
                android:textColor="@color/red_text"
                android:textAlignment="gravity"
                android:gravity="left"
                android:text="Statistics"
                android:layout_gravity="center"
                android:textSize="21dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

</android.support.constraint.ConstraintLayout>
